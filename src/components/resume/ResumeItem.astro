---
interface Props {
	title: string;
	subtitle?: string;
	date?: string;
	link?: string;
}
const { title, subtitle, date, link } = Astro.props;
---
<div class="break-inside-avoid">
  <div class="flex flex-col sm:flex-row justify-between items-baseline mb-1">
    <h3 class="text-lg font-bold text-gray-900">
        {link ? (
            <a href={link} class="hover:text-blue-600 transition-colors duration-200" target="_blank" rel="noopener noreferrer">
                {title} <span class="text-xs align-top text-gray-500 ml-0.5 no-print">â†—</span>
            </a>
        ) : title}
    </h3>
    {date && <span class="text-sm font-medium text-gray-600 shrink-0">{date}</span>}
  </div>
  {subtitle && <div class="text-md font-semibold text-gray-800 mb-2">{subtitle}</div>}
  <div class="text-sm text-gray-700 leading-relaxed">
    <slot />
  </div>
</div>
