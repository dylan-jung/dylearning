---
interface Props {
	items: string[];
}
const { items } = Astro.props;
---
<ul class="flex flex-wrap gap-2">
  {items.map((item) => (
    <li class="px-2 py-1 bg-gray-100 text-gray-700 text-xs font-medium rounded print:border print:border-gray-300 print:bg-transparent">
      {item}
    </li>
  ))}
</ul>
