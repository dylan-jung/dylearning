---
interface Props {
	items: {
		term: string;
		title: string;
		description?: string;
	}[];
}

const { items } = Astro.props;
---

<div class="mb-10">
  <div class="relative border-l-2 border-gray-200 ml-3 md:ml-4 space-y-8">
    {items.map((item, index) => (
      <div class="relative pl-6 md:pl-8 group">
         {/* Dot marker */}
        <span class={`absolute -left-[5px] md:-left-[5px] top-2 w-3 h-3 rounded-full border-2 border-white 
          ${index === 0 ? "bg-blue-600 ring-4 ring-blue-100" : "bg-gray-300 group-hover:bg-gray-400"}
          transition-colors duration-200`}
        ></span>
        
        <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1 sm:gap-4">
          <div class="flex flex-col">
            <h3 class={`text-base font-bold ${index === 0 ? "text-gray-900" : "text-gray-700"}`}>
              {item.title}
            </h3>
            {item.description && (
              <p class="text-sm text-gray-600 mt-0.5">{item.description}</p>
            )}
          </div>
          <time class={`text-sm font-mono whitespace-nowrap ${index === 0 ? "text-blue-600 font-semibold" : "text-gray-500"}`}>
            {item.term}
          </time>
        </div>
      </div>
    ))}
  </div>
</div>
